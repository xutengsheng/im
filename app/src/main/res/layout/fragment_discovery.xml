<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eaeaea"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginLeft="20dp"
            app:layout_constraintRight_toLeftOf="@id/iv_add_friend"
            android:id="@+id/et_friend"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:hint="输入好友账号添加好友"
            android:layout_height="wrap_content"/>

        <ImageView
            android:padding="4dp"
            android:id="@+id/iv_add_friend"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_friend"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/add"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add"
        android:id="@+id/cl_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginLeft="20dp"
            app:layout_constraintRight_toLeftOf="@id/iv_create_group"
            android:id="@+id/et_create_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:hint="输入创建群组的名称"
            android:layout_height="wrap_content"/>

        <ImageView
            android:padding="4dp"
            android:id="@+id/iv_create_group"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_create_group"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/add"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_create_group"
        android:id="@+id/cl_add_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginLeft="20dp"
            app:layout_constraintRight_toLeftOf="@id/iv_add_group"
            android:id="@+id/et_group"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:hint="输入要加入的群组id"
            android:layout_height="wrap_content"/>

        <ImageView
            android:padding="4dp"
            android:id="@+id/iv_add_group"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_group"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/add"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add_group"
        android:id="@+id/cl_zhihu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_zhihu"
            android:src="@mipmap/ic_drawer_zhihu"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_zhihu"
            android:text="知乎日报"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_zhihu"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/arrow_right"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_zhihu"
        android:id="@+id/cl_it_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_it"
            android:src="@mipmap/ic_drawer_gold"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_it"
            android:text="IT资讯"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_it"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/arrow_right"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_it_info"
        android:id="@+id/cl_tencent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/iv_tencent"
            android:src="@mipmap/tencent_news"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_tencent"
            android:text="腾讯新闻"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_tencent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/arrow_right"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </android.support.constraint.ConstraintLayout>



    <Button
        android:id="@+id/btn_logout"
        android:text="退出登录"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>